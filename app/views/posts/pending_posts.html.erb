<!-- views/posts/pending_reviews.html.erb -->
<h1>承認待ち一覧</h1>
<% @posts.each do |post| %>
  <div class="post">
    <h3><%= post.title %></h3>
    <p><%= post.body %></p>
    <p><strong>タグ:</strong> <%= post.category %></p>
    <%= link_to '承認', pending_posts_path(post), method: :patch, class: "btn btn-success" %>
  </div>
<% end %>
<div class="container px-5 px-sm-0 my-4">
  <div class="row">
    <!-- 左側: 会員情報 -->
    <div class="col-md-3">
      <div class="bg-light p-3 shadow-sm rounded">
        <%= render "users/userinfo", user: @user %>
      </div>
    </div>
    
    <!-- 右側: 会員一覧 -->
    <div class="col-md-8 offset-md-1">
      <div class="mb-4">
        <%= render 'shared/search' %>
      </div>
      
      <h2 class="mb-4">会員一覧</h2>
      <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-light">
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(80, 80), class: "rounded-circle img-thumbnail" %>
              </td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "Show", user_path(user.id), class: "btn btn-primary btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if post.favorited_by?(current_user) %>
  <%= link_to post_like_path(post), method: :delete,  style: "color: orange;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.likes.count %>
  <% end %>
<% end %>
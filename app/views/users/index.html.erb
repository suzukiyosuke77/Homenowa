<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/userinfo", user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      
      <%= render 'shared/search' %>
      
      <h2>会員一覧</h2>
        <table class="table table-hover table-invers">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80, 80) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id)  %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>
    
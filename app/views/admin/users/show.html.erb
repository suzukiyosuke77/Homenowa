<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>ユーザー詳細</h1>
      <p>名前: <%= @user.name %></p>
      <p>Email: <%= @user.email %></p>
      <%= link_to '退会処理をする', admin_user_path(@user), method: :delete, data: { confirm: '本当に退会させますか？' }, class: 'btn btn-danger' %>
      <%= link_to '戻る', admin_users_path %>
    </div>
  </div>
</div>
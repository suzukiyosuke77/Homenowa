<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h1 class="text-center mb-3">会員一覧</h1>
      
      <table class="table table-bordered table-hover shadow-lg">
        <thead class="table-light">
          <tr>
            <th scope="col" class="text-center">ID</th>
            <th scope="col" class="text-center">名前</th>
            <th scope="col" class="text-center">Email</th>
            <th scope="col" class="text-center">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="text-center align-middle"><%= user.id %></td>
              <td class="align-middle"><%= user.name %></td>
              <td class="align-middle"><%= user.email %></td>
              <td class="text-center align-middle">
                <%= link_to '詳細', admin_user_path(user), class: 'btn btn-info btn-sm' %>
                <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に退会させますか？' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<h1>未承認レビュー一覧</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>内容</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= truncate(post.body, length: 100) %></td>
        <td>
          <%= link_to "詳細", admin_post_path(post), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
